<aside class="col-md-4 blog-sidebar">
  
  <%= new_blog_link_helper %>

  <div class="p-3 mb-3 bg-light rounded">
    <h4 class="font-italic">About</h4>
    <p class="mb-0">  <em>Mradi</em> means "Project" in Swahili language.</p>
  </div>
  
  <div class="sidebar-module">
    <%= session_source_helper("alert alert-primary") %>
  </div>
  

  <div class="sidebar-module">
    <h4> Topics </h4>
    <% @side_bar_topics.each do |topic| %>
      <p> <%= link_to topic.title, topic_path(topic) %> </p>
    <% end %>
  </div>

  <div class="p-3">
    <h4 class="font-italic">Elsewhere</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/mainangethe"><%= fa_icon "github" %></a></li>
      <li><a href="https://facebook.com/mradikenya/"><%= fa_icon "facebook" %></a></li>
      <li><a href="https://www.instagram.com/mradike/"><%= fa_icon "instagram" %></a></li>
      <li><a href="https://twitter.com/mradi_ke"><%= fa_icon "twitter" %></a></li>
      
    </ol>
  </div>
</aside>