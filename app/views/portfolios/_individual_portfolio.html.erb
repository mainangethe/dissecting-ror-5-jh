
<div class="col-md-4">
	<div class="card mb-4 shadow-sm" data-id="<%= individual_portfolio.id %>" >
		<%= image_tag "#{ portfolio_image_helper(individual_portfolio.thumb_image, 'thumb') }", class: "card-img-top", width: "100%" %>

    	<div class="card-body">
     		<h3 class="card-title">
      			<%= link_to individual_portfolio.title, portfolio_show_path(individual_portfolio) %>
      		</h3>
	
			<p class="card-text"><%= individual_portfolio.subtitle %> </p>
			<p class="card-text"><%= individual_portfolio.body.slice(0..100) %></p>

			<div class="d-flex justify-content-between align-items-center">
				<small class="text-muted">9 mins</small>
			</div>
		</div>
  	</div>
</div>