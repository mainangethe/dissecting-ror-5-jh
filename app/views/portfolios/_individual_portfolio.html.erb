
<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    
    <%= image_tag individual_portfolio.thumb_image, class: "card-img-top" unless individual_portfolio.thumb_image.nil? %>
    
    <div class="card-body">
     	<h2 class="card-text">
      		<%= link_to individual_portfolio.title, portfolio_show_path(individual_portfolio) %>
      	</h2>
	
		<p class="card-text"><%= individual_portfolio.subtitle %> </p>
		<p class="card-text"><%= individual_portfolio.body.slice(0..100) %></p>

		<div class="d-flex justify-content-between align-items-center">
			<small class="text-muted">9 mins</small>
		</div>
	</div>
  </div>
</div>