<%= form_for(@portfolio_item) do |form| %>
  <section>
    <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
        <%= js add_gritter(error, title: "Mradi Portfolio", sticky: false) %>
      <% end %>    
  <% end %>
  </section>
  <section>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body , class: 'form-control', rows: '10' %>
    </div>

    <div class="form-group">
      <label class="btn btn-secondary">
        Upload a Main Image <%= form.file_field :main_image, style: 'display:none' %>
      </label>
    </div>
    
    <div class="form-group">
      <label class="btn btn-secondary">
        Upload a Thumbnail <%= form.file_field :thumb_image, style: 'display:none' %>
      </label>
    </div>

  </section>

  <hr>

  <section>
    <h2> Technologies Used: </h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
        
      <% end %>
    </div>
    <div>
      <%= link_to_add_association 'Add Technology', form, :technologies, class: 'btn btn-success' %>
    </div>
  </section>
  <br>


  <div class="form-group">
    <%= form.submit "Save Portfolio", class: 'btn btn-primary' %>
  </div>
<% end %>
