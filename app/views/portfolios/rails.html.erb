<h1> Ruby on Rails Portfolio Items </h1>

<%= link_to "Create New Portfolio", new_portfolio_path  if logged_in?(:site_admin) %>

<% @rails_portfolios.each do |individual_portfolio| %>

	<p> <%= link_to individual_portfolio.title, portfolio_show_path(individual_portfolio) %> </p>
	<p> <%= individual_portfolio.subtitle %> </p>
	<p> <%= individual_portfolio.body %> </p>
	<%= image_tag individual_portfolio.thumb_image unless individual_portfolio.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfolio_path(individual_portfolio.id)  if logged_in?(:site_admin) %>
	<%= link_to "Delete This" , portfolio_path(individual_portfolio), method: :delete, data: { confirm: "Are you sure?" }  if logged_in?(:site_admin) %>

<% end %>