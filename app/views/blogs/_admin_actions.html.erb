<% if logged_in?(:site_admin) %>
	<% blog = @blog if @blog  %>
	<%= link_to blog.status, toggle_status_blog_path(blog), class: blog_status_helper(blog) %> |
	<%= link_to 'Edit', edit_blog_path(blog) , class: 'badge badge-warning'%> | 
	<%= link_to 'Destroy', blog, method: :delete, 
								data: { confirm: 'Are you sure?' } , class: 'badge badge-danger' %>
<% end %>